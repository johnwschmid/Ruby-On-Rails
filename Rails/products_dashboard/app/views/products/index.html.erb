<h2>Products Dashboard</h2>

<div id="notice"> <%= flash[:notice] %> </div><br>

<table width="70%">
	<tr>
		<th>Name:</th>
		<th>Description:</th>
		<th>Price:</th>
		<th>Category:</th>
		<th>Options:</th>
	</tr>
	<% @product.each do |i| %>
	<tr>
		<td><%= i.name %></td>
		<td><%= i.description %></td>
		<td><%= i.pricing %></td>
		<td><%= i.category.name %></td>
		<td>
			<a href="/products/<%= i.id %>/">Show</a>
			<a href="/products/<%= i.id %>/edit">Edit</a>
			<form action="/products/<%= i.id %>" method="post">
				<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			    <input type="hidden" name="_method" value="delete">
				<button>Delete</button>
			</form>
		</td>
	</tr>
	<% end %>
</table>
<br>
<form action="/comments" method="get">
	<button>All Comments</button>
</form>
<hr>
<form action="/products/new" method="get">
	<button>New Product</button>
</form>
<hr>
