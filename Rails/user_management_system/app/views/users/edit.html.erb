<h1>Edit User</h1>

<%= form_for @user,  url: {action: "update"} do |f| %>

	<%= f.label :first_name %>:
	<%= f.text_field :first_name %><br><br>

	<%= f.label :last_name %>:
	<%= f.text_field :last_name %><br><br>

	<%= f.label :email %>:
	<%= f.text_field :email %><br><br>

	<%= f.label :password %>:
	<%= f.text_field :password %><br><br>

	<%= submit_tag 'Update' %>

<% end %><br>
<a href="/users/<%= @user.id %>/">Show</a>
