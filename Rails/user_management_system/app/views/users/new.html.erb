<h2>New User</h2>

<div id="error"> <%= flash[:error] %> </div><br>

<%= form_for @user,  url: {action: "create"} do |f| %>
	<%= f.label :first_name %>:
	<%= f.text_field :first_name %><br><br>
	<%= f.label :last_name %>:
	<%= f.text_field :last_name %><br><br>
	<%= f.label :email %>:
	<%= f.text_field :email %><br><br>
	<%= f.label :password %>:
	<%= f.text_field :password %><br><br>
	<%= submit_tag 'Create' %>

<% end %>

<hr>

<a href="/">Home</a>